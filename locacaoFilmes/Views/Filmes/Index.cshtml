
<div class="container-fluid">
    <h1>Filmes</h1>
    <hr>
    <!-- Formulário para adicionar/editar filmes -->
    <form id="filme-form" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="titulo" placeholder="Título do filme" required>
                    <label for="titulo">Título do filme</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="diretor" placeholder="Diretor do filme" required>
                    <label for="diretor">Diretor do filme</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="ano" placeholder="Ano de lançamento" required>
                    <label for="ano">Ano de lançamento</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="genero" placeholder="Gênero do filme" required>
                    <label for="genero">Gênero do filme</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>

    <!-- Tabela de filmes -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Título</th>
                <th>Diretor</th>
                <th>Ano</th>
                <th>Gênero</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="filme-table">
            <!-- Dados da tabela serão carregados via JavaScript -->
        </tbody>
    </table>

</div>

    
